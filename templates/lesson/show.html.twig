{% extends 'base.html.twig' %}

{% block title %}{{lesson.name}} / {{course.name}} / Study-On{% endblock %}

{% block body %}
    <h2>{{lesson.name}}</h2>
    <p>Курс <a href="{{ path('course_show', {id: lesson.course.id}) }}">{{course.name}}</a></p>
    <div class="row">
        <a class="btn btn-outline-dark ml-3 mr-2 mt-3 btn-sm" href="{{ path('lesson_edit', {'id': lesson.id}) }}">Редактировать</a>
        {{ include('lesson/_delete_form.html.twig') }}
    </div>
    <div class="card mt-3">
        <div class="card-body">
            {{ lesson.content }}
        </div>
    </div>
{% endblock %}

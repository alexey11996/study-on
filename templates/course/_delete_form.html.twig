<form method="post" action="{{ path('course_delete', {'id': course.id}) }}" onsubmit="return confirm('При удалении курса удалятся все уроки связанные с ним. Продолжить?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ course.id) }}">
    <button class="btn">Удалить</button>
</form>
